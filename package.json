    "prettier-plugin-tailwindcss": "^0.5.14",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*",
    "internal/*"
  ],
  "dependencies": {
    "rimraf": "^5.0.5"
  }
