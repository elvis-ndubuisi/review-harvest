{
  "name": "review-harvest",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo clean && yarn rimraf node_modules"
  },
  "devDependencies": {
    "@tooling/eslint-config": "*",
    "@tooling/typescript-config": "*",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
